{
  "crons": [
    {
      "path": "/api/cron/auto-sync?type=full-with-matches",
      "schedule": "0 6,12,18 * * *"
    },
    {
      "path": "/api/cron/auto-sync?type=rikishi-only", 
      "schedule": "0 0 * * 0"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/((?!api|static).*)",
      "dest": "/static/index.html"
    }
  ]
} 